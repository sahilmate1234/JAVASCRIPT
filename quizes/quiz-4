<script>
/* HOME */
let playerName = "Guest";
document.getElementById("welcome").innerText = `Welcome ${playerName}`;

function login(){
let name = document.getElementById("username").value;
if(name.trim()===""){ alert("Name required!"); return; }
playerName = name;
document.getElementById("welcome").innerText = `Welcome ${playerName}`;
}

let darkMode=false;
document.getElementById("themeBtn").onclick=function(){
darkMode=!darkMode;
document.body.classList.toggle("bg-dark");
document.body.classList.toggle("text-white");
};

setInterval(()=>{
document.getElementById("clock").innerText = new Date().toLocaleTimeString();
},1000);

let count=0;
document.getElementById("playBtn").onclick=()=>{
count++;
document.getElementById("count").innerText=count;
};

/* GAMES */
class Game{
constructor(name,genre,rating,image){
this.name=name;
this.genre=genre;
this.rating=rating;
this.image=image;
}
}

const games=[
new Game("BattleZone","Action",4.5,"https://tse4.mm.bing.net/th/id/OIP.LjSBXxdpjp6PqadcjaARuwHaCc?rs=1&pid=ImgDetMain&o=7&rm=3"),
new Game("SpeedX","Racing",4.2,"https://i.ytimg.com/vi/BIBLjuyUjDs/mqdefault.jpg"),
new Game("MindPro","Puzzle",4.8,"https://th.bing.com/th/id/OIP.zriINMlRrOxLbNH9iXbWmAHaGB?w=217&h=180&c=7&r=0&o=7&dpr=1.3&pid=1.7&rm=3" )
];

function renderGames(list){
let container=document.getElementById("gameList");
container.innerHTML="";
list.forEach(game=>{
container.innerHTML+=`
<div class="card m-3" style="width:18rem;">
<img src="${game.image}" class="card-img-top" height="180">
<div class="card-body">
<h5>${game.name}</h5>
<p>${game.genre}</p>
<p>‚≠ê ${game.rating}</p>
<button class="btn btn-sm btn-primary like">Like</button>
<button class="btn btn-sm btn-warning" onclick="showDetails('${game.name}')">Details</button>
</div>
</div>`;
});
}
renderGames(games);

function handleSearch(){
let value=document.getElementById("search").value;
if(value===""){ alert("Search field empty"); return; }
let filtered=games.filter(g=>g.name.toLowerCase().includes(value.toLowerCase()));
renderGames(filtered);
}

function sortGames(){
games.sort((a,b)=>b.rating-a.rating);
renderGames(games);
}

let likes=0;
document.addEventListener("click",function(e){
if(e.target.classList.contains("like")){
likes++;
alert("Total Likes: "+likes);
}
});

function showDetails(name){
document.getElementById("modalBody").innerText=name;
new bootstrap.Modal(document.getElementById("gameModal")).show();
}

/* PROFILE */
const player={ name:"Alex", score:1200, updateScore(points){ this.score+=points; } };

function increaseScore(){
player.updateScore(100);
document.getElementById("score").innerText=player.score;
updateProgress();
}

function updateProgress(){
let percent=player.score/2000*100;
document.getElementById("progressBar").style.width=percent+"%";
}

$("#editBtn").click(()=>$("#name").prop("contentEditable",true));

function logout(){
if(confirm("Are you sure you want to logout?")){
location.reload();
}
}

function resetProfile(){
player.score=0;
document.getElementById("score").innerText=0;
updateProgress();
}
</script>

</body>
</html>
